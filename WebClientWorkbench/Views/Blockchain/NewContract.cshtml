
@model NewContractViewModel


<div class="login-page">
    <div class="page-header">
        <h1></h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create New Contract HelloBlockchain</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="NewContract" method="post">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="RequestMessage"></label>
                                <input class="form-control" placeholder="Message" asp-for="RequestMessage" autofocus>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary">Create</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

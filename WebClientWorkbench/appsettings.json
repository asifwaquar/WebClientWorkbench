{
  "AzureAd": {
    // Coordinates of the Azure AD Tenant
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "<Your domain name>",
    "TenantId": "<The Domain ID>",

    // Coordinates of the Workbench WebApp Client
    "ClientId": "<ID of the corresponding app registered in Azure Active Directory>",
    "CallbackPath": "/signin-oidc",
    "ClientSecret": "<The secret key>",

    // Coordinates of the Blockchain API
    "WorkbenchResourceId": "<ClientId of the Blockchain API Service>", 
    "WorkbenchBaseAddress": "<Base Address of your Blockchain API service>"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  }
}

